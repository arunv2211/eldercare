<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/layout_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="@color/blue"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="30dp"></TextView>

        <EditText
            android:layout_below="@+id/layout_head_text"
            android:id="@+id/name_id"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:layout_below="@+id/login_text"
            android:id="@+id/email_id"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:id="@+id/password_id"
            android:layout_below="@id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Password"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:id="@+id/date_of_birth"
            android:layout_below="@id/password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Date Of Birth"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:id="@+id/gender_id"
            android:layout_below="@id/date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Gender"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:id="@+id/phone_no_id"
            android:layout_below="@id/gender_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Phone no"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />
        <EditText
            android:id="@+id/alternate_no_id"
            android:layout_below="@id/phone_no_id_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Alternate no"
            android:padding="12dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_edit_text"
            />


        <Button
            android:id="@+id/login_button"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/profile_update"
            android:layout_gravity="center"
            android:elevation="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>