<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.eldercare.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.eldercare.ui.profile.ProfileFragment"
        android:label="@string/profile_name"
        tools:layout="@layout/fragment_profile1" />

    <fragment
        android:id="@+id/navigation_remainder"
        android:name="com.eldercare.ui.remainders.RemainderFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_remainders" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.eldercare.ui.remainders.RemainderFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.eldercare.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_update_profile"
        android:name="com.eldercare.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />


</navigation>